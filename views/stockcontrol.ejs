        <!--Transfer Button-->
        <div class="container" align="center">
            <button type="button" class="btn btn-default" id="transfer">Transfer Inventory</button>
        </div>
        
        <script type="text/javascript">
        $(document).ready(function() {
            // Getting references to our form and input

            $("#transfer").on("click", function() {

                var locationfrom = $("#locationfrom").val();
                var locationto = $("#locationto").val();
                var name = $("#name").val().trim();
                var amount = $("#amount").val().trim();

                    console.log(locationfrom + locationto + name + amount + transfer)
                    var data = {
                    locationFrom: locationfrom,
                    locationTo: locationto,
                    name: name,
                    amount: parseInt(amount)
                }

                $.ajax({
                  url: '/api/stockcontrol',
                  type: 'PUT',
                  data: data,
                  success: function(data) {
                    alert('Load was performed.');
                  }
                });
            });


        });
